---
import BalancedHeading from '@/components/BalancedHeading.astro';
import BalancedSubheading from '@/components/BalancedSubheading.astro';
import Button from '@/components/ui/Button.astro';
import Icon from '@/components/ui/Icon.astro';
import AnimatedInput from '@/components/ui/AnimatedInput.astro';

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<div class={`max-w-7xl mx-auto px-4 py-40 md:py-60 grid grid-cols-1 md:grid-cols-2 gap-10 ${className}`}>
  <div>
    <div class="flex mb-2">
      <div class="flex justify-center items-center overflow-hidden w-12 h-12 rounded-xl bg-neutral-800">
        <Icon size={24} class="text-cyan-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
            <path d="M3 7l9 6l9 -6" />
          </svg>
        </Icon>
      </div>
    </div>
    <BalancedHeading className="text-5xl text-left">Contact us</BalancedHeading>
    <BalancedSubheading className="text-left text-neutral-400">
      Help us improve QKO by sharing your feedback with us.
    </BalancedSubheading>

    <div class="text-sm mt-10">
      <p class="text-sm text-neutral-200">Email</p>
      <p class="text-sm text-neutral-400">contact@qko.com</p>
    </div>
    <div class="text-sm mt-4">
      <p class="text-sm text-neutral-200">Support</p>
      <p class="text-sm text-neutral-400">support@qko.com</p>
    </div>
  </div>

  <div class="flex flex-col items-start gap-4 max-w-2xl w-full mx-auto bg-gradient-to-b from-neutral-900 to-neutral-950 p-10 rounded-3xl relative overflow-hidden">
    <!-- Grid background pattern -->
    <div class="absolute inset-0 opacity-20 pointer-events-none">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.1) 1px, transparent 0); background-size: 20px 20px;"></div>
    </div>

    <div class="relative z-10 w-full">
      <AnimatedInput
        type="text"
        id="name"
        placeholder="John Doe"
        label="Full name"
      />
    </div>

    <div class="relative z-10 w-full">
      <AnimatedInput
        type="email"
        id="email"
        placeholder="john@example.com"
        label="Email Address"
      />
    </div>

    <div class="relative z-10 w-full">
      <AnimatedInput
        id="message"
        placeholder="Type your message here"
        label="Do you have any specific questions or special requests?"
        rows={5}
      />
    </div>

    <div class="relative z-10 w-full">
      <Button variant="simple" class="bg-neutral-800 text-white border-neutral-700 hover:bg-neutral-700">
        Submit
      </Button>
    </div>
  </div>
</div>

<style>
  /* Custom styles for the contact form */
  input:focus, textarea:focus {
    border-color: rgb(59 130 246);
  }

  .bg-neutral-800 {
    background-color: rgb(38 38 38);
  }

  .border-neutral-700 {
    border-color: rgb(64 64 64);
  }

  .focus\:ring-neutral-600:focus {
    --tw-ring-color: rgb(82 82 82);
  }
</style>
