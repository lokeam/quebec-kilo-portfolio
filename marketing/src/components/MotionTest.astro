
<html lang="en">
  <head>
    <title>Motion Test</title>
  </head>
  <body class="bg-gray-100 p-8">
    <div class="motion-test bg-blue-500 w-20 h-20 rounded-lg"></div>
    <button class="mt-4 bg-green-500 text-white px-4 py-2 rounded">
      Test Animation
    </button>
  </body>
</html>

<script>
  import { animate } from "motion";

  // Test that Motion is working
  const button = document.querySelector('button');
  const testElement = document.querySelector('.motion-test');

  button?.addEventListener('click', () => {
    animate(testElement, { rotate: 360, scale: [1, 1.2, 1] });
  });

  // Auto-animate on load
  animate(testElement, { opacity: [0, 1] }, { duration: 1 });
</script>

<style>
  @import '../styles/global.css';
</style>