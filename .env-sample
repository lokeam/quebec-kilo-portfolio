# QKO Environment Configuration
# Copy this file to .env and configure for your environment

# Application Configuration
PORT=8080
API_ENV=development

# Database Configuration
# Use the provided Docker Compose setup or configure your own PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/test_123

# Auth0 Configuration (Required)
# Create an application at https://manage.auth0.com
AUTH0_CLIENT_ID=your_client_id_here
AUTH0_CLIENT_SECRET=your_client_secret_here
AUTH0_DOMAIN=your_domain.auth0.com
AUTH0_AUDIENCE=your_api_identifier

# Redis Configuration (Optional - uses defaults if not set)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External Services (Optional)
# IGDB for game metadata - register at https://api.igdb.com
IGDB_CLIENT_ID=
IGDB_CLIENT_SECRET=

# Sentry for error tracking (Optional)
SENTRY_DSN_BACK=
SENTRY_DSN_FRNT=
SENTRY_ENVIRONMENT=development

# Production-only variables (not needed for local development)
# LETSENCRYPT_EMAIL=
# DOMAIN_NAME=
# AUTH0_MANAGEMENT_AUDIENCE=
# METRICS_API_KEY=
